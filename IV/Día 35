  <script>
    function toggleVocab() {
      const box = document.getElementById("vocabBox");
      if (!box) return;
      box.classList.toggle("hidden");
    }

    // â„ï¸ Simple falling snow
    (function makeSnow() {
      const layer = document.getElementById("snow-layer");
      if (!layer) return;

      const COUNT = 40; // bump to 60 if you want heavier snow
      const glyphs = ["â„", "â…", "â†"];

      for (let i = 0; i < COUNT; i++) {
        const flake = document.createElement("span");
        flake.className = "snowflake";
        flake.textContent = glyphs[Math.floor(Math.random() * glyphs.length)];

        const left = Math.random() * 100;              // vw
        const size = 10 + Math.random() * 16;          // px
        const duration = 6 + Math.random() * 10;       // s
        const delay = Math.random() * 8;               // s
        const drift = (Math.random() * 80 - 40).toFixed(0) + "px"; // -40..40

        flake.style.left = left + "vw";
        flake.style.fontSize = size + "px";
        flake.style.animationDuration = duration + "s";
        flake.style.animationDelay = (-delay) + "s";
        flake.style.setProperty("--drift", drift);
        flake.style.opacity = (0.5 + Math.random() * 0.5).toFixed(2);

        layer.appendChild(flake);
      }
    })();
  </script>
