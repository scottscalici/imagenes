  <!-- Shared JavaScript -->
  <script>

  // Conversación timer
 let timerInterval;
let seconds = 0;

function startTimer(btn) {
  const timerDisplay = btn.parentElement.querySelector("[data-timer]");
  clearInterval(timerInterval);
  timerInterval = setInterval(() => {
    seconds++;
    const mins = String(Math.floor(seconds / 60)).padStart(2, '0');
    const secs = String(seconds % 60).padStart(2, '0');
    timerDisplay.textContent = `${mins}:${secs}`;
  }, 1000);
}

function resetTimer(btn) {
  const timerDisplay = btn.parentElement.querySelector("[data-timer]");
  clearInterval(timerInterval);
  seconds = 0;
  timerDisplay.textContent = "00:00";
}
    function toggleVocab() {
      const box = document.getElementById("vocabBox");
      const btn = document.getElementById("toggleBtn");
      if (box.classList.contains("hidden")) {
        box.classList.remove("hidden");
        btn.innerText = "Reducir";
      } else {
        box.classList.add("hidden");
        btn.innerText = "Expandir";
      }
    }
  </script>
<div class="bat-swarm-container">
  <script>
    const batURL = "https://github.com/scottscalici/imagenes/blob/main/diasfestivos/murcielago_transparent.gif?raw=true";
    const ghostURL = "https://github.com/scottscalici/imagenes/blob/main/diasfestivos/fantasma.png?raw=true";

    const container = document.currentScript.parentElement;
    const numBats = 8;
    const numGhosts = 2; // ✅ fewer ghosts

    // BATS
    for (let i = 0; i < numBats; i++) {
      const img = document.createElement("img");
      img.src = batURL;

      const size = Math.floor(Math.random() * 40) + 30; // 30–70px
      const top = Math.floor(Math.random() * 70) + 5;   // 5–75vh
      const duration = Math.random() * 6 + 8;           // 8–14s
      const delay = Math.random() * 5;

      img.style.width = `${size}px`;
      img.style.top = `${top}vh`;
      img.style.animation = `flyAcross ${duration}s linear infinite`;
      img.style.animationDelay = `${delay}s`;

      container.appendChild(img);
    }

    // GHOSTS
    for (let i = 0; i < numGhosts; i++) {
      const img = document.createElement("img");
      img.src = ghostURL;
      img.classList.add("ghost");

      const size = Math.floor(Math.random() * 60) + 70; // 70–130px
      const left = Math.floor(Math.random() * 80) + 10; // 10–90vw
      const top = Math.floor(Math.random() * 60) + 20;  // 20–80vh
      const delay = Math.random() * 6;

      img.style.width = `${size}px`;
      img.style.left = `${left}vw`;
      img.style.top = `${top}vh`;
      img.style.animationDelay = `${delay}s`;

      container.appendChild(img);
    }
  </script>
</div>

</div>

