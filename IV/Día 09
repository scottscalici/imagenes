  <script>
    // ConversaciÃ³n timer
    let timerInterval;
    let seconds = 0;
    const timerDisplay = document.getElementById("timer");
    document.getElementById("startBtn").addEventListener("click", () => {
      clearInterval(timerInterval);
      timerInterval = setInterval(() => {
        seconds++;
        const mins = String(Math.floor(seconds / 60)).padStart(2, '0');
        const secs = String(seconds % 60).padStart(2, '0');
        timerDisplay.textContent = `${mins}:${secs}`;
      }, 1000);
    });
    document.getElementById("resetBtn").addEventListener("click", () => {
      clearInterval(timerInterval);
      seconds = 0;
      timerDisplay.textContent = "00:00";
    });

    // Aviso temporal auto-ocultar (cambiar cutoff si hace falta)
    (function(){
      const cutoff = new Date(new Date().getFullYear(), 8, 28); // 28 septiembre (mes 0-indexado)
      if (new Date() > cutoff) {
        const box = document.getElementById('avisoBox');
        if (box) box.style.display = 'none';
      }
    })();

    // ==== PrÃ¡ctica: tabla de conjugaciÃ³n (pretÃ©rito) ====
    const rows = [
      // regulares de uve/uve + i group + j group, etc.
      { verb: 'andar', forms: ['anduve','anduviste','anduvo','anduvimos','anduvisteis','anduvieron'] },
      { verb: 'tener', forms: ['tuve','tuviste','tuvo','tuvimos','tuvisteis','tuvieron'] },
      { verb: 'estar', forms: ['estuve','estuviste','estuvo','estuvimos','estuvisteis','estuvieron'] },
      { verb: 'poner', forms: ['puse','pusiste','puso','pusimos','pusisteis','pusieron'] },
      { verb: 'poder', forms: ['pude','pudiste','pudo','pudimos','pudisteis','pudieron'] },
      { verb: 'saber', forms: ['supe','supiste','supo','supimos','supisteis','supieron'] },
      { verb: 'venir', forms: ['vine','viniste','vino','vinimos','vinisteis','vinieron'] },
      { verb: 'querer', forms: ['quise','quisiste','quiso','quisimos','quisisteis','quisieron'] },
      { verb: 'hacer', forms: ['hice','hiciste','hizo','hicimos','hicisteis','hicieron'] },
      { verb: 'producir', forms: ['produje','produjiste','produjo','produjimos','produjisteis','produjeron'] },
      { verb: 'decir', forms: ['dije','dijiste','dijo','dijimos','dijisteis','dijeron'] },
      { verb: 'traer', forms: ['traje','trajiste','trajo','trajimos','trajisteis','trajeron'] }
    ];

    const tbody = document.getElementById('tbody');
    function buildRow(v, idx){
      const tr = document.createElement('tr');
      tr.className = idx % 2 ? 'bg-gray-50' : '';
      const subjs = ['yo','tÃº','Ã©l/ella/ud.','nosotros','vosotros','ellos/uds.'];
      const first = document.createElement('td');
      first.className = 'px-3 py-2 font-medium text-gray-700';
      first.textContent = v.verb;
      tr.appendChild(first);
      v.forms.forEach(ans => {
        const td = document.createElement('td');
        td.className = 'px-2 py-1';
        const inp = document.createElement('input');
        inp.type = 'text';
        inp.className = 'w-full border rounded px-2 py-1 focus:outline-none focus:ring-2 focus:ring-pink-400';
        inp.setAttribute('data-answer', ans);
        inp.addEventListener('keydown', (e)=>{ if(e.key==='Enter'){ e.preventDefault(); checkAll(); }});
        td.appendChild(inp);
        tr.appendChild(td);
      });
      return tr;
    }
    rows.forEach((r, i)=> tbody.appendChild(buildRow(r, i)));

    function normalize(s){ return (s||'').trim().toLowerCase(); } // accent-sensitive
    function checkAll(){
      const inputs = tbody.querySelectorAll('input');
      let correctCount = 0;
      inputs.forEach(inp=>{
        const ok = normalize(inp.value) === normalize(inp.dataset.answer);
        inp.classList.remove('ring-2','ring-red-400','ring-green-400','bg-red-50','bg-green-50');
        if(ok){ inp.classList.add('ring-2','ring-green-400','bg-green-50'); correctCount++; }
        else if(inp.value.trim()!==''){ inp.classList.add('ring-2','ring-red-400','bg-red-50'); }
      });
      return correctCount;
    }
    function revealAll(){
      tbody.querySelectorAll('input').forEach(inp=>{
        inp.value = inp.dataset.answer;
        inp.classList.remove('ring-red-400','bg-red-50');
        inp.classList.add('ring-2','ring-green-400','bg-green-50');
      });
    }
    function resetAll(){
      tbody.querySelectorAll('input').forEach(inp=>{
        inp.value = '';
        inp.classList.remove('ring-2','ring-red-400','ring-green-400','bg-red-50','bg-green-50');
      });
    }
    document.getElementById('checkBtn').addEventListener('click', checkAll);
    document.getElementById('revealBtn').addEventListener('click', revealAll);
    document.getElementById('resetBtn2').addEventListener('click', resetAll);
  </script>
</body>
