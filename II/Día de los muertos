<body class="bg-orange-50 text-gray-900">
  <div class="max-w-5xl mx-auto py-10 px-4">
    <h1 class="text-3xl font-bold text-orange-700 mb-6 text-center">💀 Día de Muertos: Palabras desordenadas</h1>
    <p class="mb-8 text-center text-gray-700">Escribe la palabra correcta para cada pista. Luego haz clic en <strong>Verificar</strong>.</p>

    <div id="quiz" class="space-y-5"></div>

    <div class="text-center mt-8">
      <button id="checkBtn" class="bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 px-5 rounded-lg">Verificar</button>
      <p id="score" class="mt-4 text-lg font-semibold"></p>
    </div>
  </div>

  <script>
    const data = [
      { scrambled: "ecvlaara", answer: "calavera", clue: "Representa la muerte. Puede ser de azúcar." },
      { scrambled: "eppla apicdo", answer: "papel picado", clue: "Es un papel decorativo. Para hacerlo, necesitas papel de colores y unas tijeras." },
      { scrambled: "zcur", answer: "cruz", clue: "Puede ser de sal." },
      { scrambled: "btuma", answer: "tumba", clue: "Lugar donde descansa el difunto." },
      { scrambled: "eval", answer: "vela", clue: "La luz de la ____ guía a los muertos hacia el mundo de los vivos." },
      { scrambled: "rofl", answer: "flor", clue: "La ____ cempasúchil es la más común en las ofrendas." },
      { scrambled: "emneetrico", answer: "cementerio", clue: "Lugar con tumbas y difuntos." },
      { scrambled: "apn ed mrueto", answer: "pan de muerto", clue: "Postre típico del Día de Muertos." },
      { scrambled: "frodaen", answer: "ofrenda", clue: "Conjunto de regalos para los difuntos." },
      { scrambled: "als", answer: "sal", clue: "En las ofrendas podemos encontrar platos con ___. Sirve para purificar las almas." },
      { scrambled: "ugtiaarr", answer: "guitarra", clue: "La música es importante para celebrar el Día de Muertos. Este es el instrumento más común." },
      { scrambled: "ctraian", answer: "catrina", clue: "Es el personaje más famoso del Día de Muertos." },
      { scrambled: "sfidutno", answer: "difuntos", clue: "Son los protagonistas del Día de Muertos. Los altares están dedicados a ellos." },
      { scrambled: "arlta", answer: "altar", clue: "Lugar donde se coloca la ofrenda." },
      { scrambled: "tqiileua", answer: "tequila", clue: "Bebida alcohólica típica de México muy común en los altares." },
      { scrambled: "nsicinioe", answer: "incienso", clue: "Cuando se quema desprende un buen aroma." },
      { scrambled: "etrarot", answer: "retrato", clue: "El ___ del difunto es la parte más importante del altar." },
      { scrambled: "savo de gaua", answer: "vaso de agua", clue: "El difunto tiene sed después de su viaje hasta el mundo de los vivos." },
      { scrambled: "jutuege", answer: "juguete", clue: "Se coloca en los altares para niños." }
    ];

    const quiz = document.getElementById("quiz");
    data.forEach((item, i) => {
      const div = document.createElement("div");
      div.className = "bg-white border-l-4 border-orange-400 p-4 rounded-lg shadow-sm";
      div.innerHTML = `
        <div class="flex flex-col sm:flex-row sm:items-center gap-3">
          <span class="font-bold text-orange-600 text-lg">${String.fromCharCode(97 + i)}.</span>
          <div class="flex-1">
            <p class="font-mono text-orange-700">${item.scrambled}</p>
            <input type="text" class="answer mt-1 w-full sm:w-72 border rounded px-2 py-1" data-answer="${item.answer.toLowerCase()}">
          </div>
        </div>
        <p class="mt-2 text-sm text-gray-700">${item.clue}</p>
      `;
      quiz.appendChild(div);
    });

    document.getElementById("checkBtn").addEventListener("click", () => {
      const inputs = document.querySelectorAll(".answer");
      let correct = 0;
      inputs.forEach(input => {
        const user = input.value.trim().toLowerCase();
        const ans = input.dataset.answer;
        if (user === ans) {
          input.classList.remove("border-red-400");
          input.classList.add("border-green-500", "bg-green-50");
          correct++;
        } else {
          input.classList.remove("border-green-500");
          input.classList.add("border-red-400", "bg-red-50");
        }
      });
      document.getElementById("score").textContent = `✅ ${correct} de ${data.length} correctos`;
    });
  </script>
</body>
