  <script>
    const inputs = Array.from(document.querySelectorAll('input[data-answer]'));
    const checkBtn = document.getElementById('checkBtn');
    const revealBtn = document.getElementById('revealBtn');
    const resetBtn = document.getElementById('resetBtn');

    function normalize(s){ return (s ?? '').trim(); }

    function checkAnswers(){
      inputs.forEach(inp => {
        const ok = normalize(inp.value) === inp.dataset.answer;
        inp.classList.toggle('bg-green-200', ok);
        inp.classList.toggle('bg-red-200', !ok && normalize(inp.value) !== '');
        if(!ok && normalize(inp.value) === '') {
          inp.classList.remove('bg-red-200');
        }
      });
    }

    function revealAnswers(){
      inputs.forEach(inp => {
        inp.value = inp.dataset.answer;
        inp.classList.add('bg-green-200');
        inp.classList.remove('bg-red-200');
      });
    }

    function resetAnswers(){
      inputs.forEach(inp => {
        inp.value = '';
        inp.classList.remove('bg-green-200','bg-red-200');
      });
    }

    checkBtn.addEventListener('click', checkAnswers);
    revealBtn.addEventListener('click', revealAnswers);
    resetBtn.addEventListener('click', resetAnswers);

    inputs.forEach(inp => inp.addEventListener('keydown', e => {
      if(e.key === 'Enter'){
        e.preventDefault();
        checkAnswers();
      }
    }));
  </script>
</body>
</html>
