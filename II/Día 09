<script>
  // util: case-insensitive, accent-sensitive compare
  function eqAccentSensitive(a, b) {
    return (a ?? "").trim().toLowerCase() === (b ?? "").trim().toLowerCase();
  }

  // Accept lists (text inputs can have multiple correct forms)
  const ACCEPT = {
    q1: ["perú", "lima, perú"],
    q2: ["2006"],
    q3: ["subcampeón", "segundo lugar"],
    q4: "Argentina",
    q5: ["dieciocho", "18"],
    q6: ["once", "11"],
    q7: "falso",
    q8: ["hawái"]
  };

  function mark(el, ok) {
    el.classList.remove("ok","no","border-green-400","border-red-400","bg-green-50","bg-red-50");
    if (ok) {
      el.classList.add("ok","border-green-400","bg-green-50");
    } else {
      el.classList.add("no","border-red-400","bg-red-50");
    }
  }

  document.getElementById("verificarBtn").addEventListener("click", () => {
    let correct = 0, total = 8;

    // Q1 text
    const q1 = document.getElementById("q1");
    const ok1 = ACCEPT.q1.some(ans => eqAccentSensitive(q1.value, ans));
    mark(q1, ok1); if (ok1) correct++;

    // Q2 text (year)
    const q2 = document.getElementById("q2");
    const ok2 = ACCEPT.q2.some(ans => eqAccentSensitive(q2.value, ans));
    mark(q2, ok2); if (ok2) correct++;

    // Q3 text (subcampeón / segundo lugar)
    const q3 = document.getElementById("q3");
    const ok3 = ACCEPT.q3.some(ans => eqAccentSensitive(q3.value, ans));
    mark(q3, ok3); if (ok3) correct++;

    // Q4 radio
    const q4Wrap = document.querySelector('[name="q4"]').closest(".border");
    const q4 = document.querySelector('input[name="q4"]:checked');
    const ok4 = q4 && q4.value === ACCEPT.q4;
    mark(q4Wrap, ok4); if (ok4) correct++;

    // Q5 text (18/dieciocho)
    const q5 = document.getElementById("q5");
    const ok5 = ACCEPT.q5.some(ans => eqAccentSensitive(q5.value, ans));
    mark(q5, ok5); if (ok5) correct++;

    // Q6 text (11/once)
    const q6 = document.getElementById("q6");
    const ok6 = ACCEPT.q6.some(ans => eqAccentSensitive(q6.value, ans));
    mark(q6, ok6); if (ok6) correct++;

    // Q7 V/F radio
    const q7Wrap = document.querySelector('[name="q7"]').closest(".border");
    const q7 = document.querySelector('input[name="q7"]:checked');
    const ok7 = q7 && eqAccentSensitive(q7.value, ACCEPT.q7);
    mark(q7Wrap, ok7); if (ok7) correct++;

    // Q8 text (Hawái)
    const q8 = document.getElementById("q8");
    const ok8 = ACCEPT.q8.some(ans => eqAccentSensitive(q8.value, ans));
    mark(q8, ok8); if (ok8) correct++;

    // Score
    document.getElementById("score").textContent = `Resultado: ${correct}/${total}`;
  });

  document.getElementById("resetBtn").addEventListener("click", () => {
    const form = document.getElementById("surfQuiz");
    form.reset();
    document.getElementById("score").textContent = "";
    // remove visual marks
    form.querySelectorAll(".ok,.no,.border-green-400,.border-red-400,.bg-green-50,.bg-red-50")
        .forEach(el => el.classList.remove("ok","no","border-green-400","border-red-400","bg-green-50","bg-red-50"));
  });
</script>
