  Object.keys(answers).forEach((id,i)=>{
    const li=document.createElement("li");
    li.innerHTML=`<input type="text" id="${id}" class="border rounded px-2 py-1 w-72" placeholder="Escribe aqu√≠"> <span class="text-sm text-gray-500">( ${Object.values(answers)[i]} )</span>`;
