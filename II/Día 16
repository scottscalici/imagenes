<script>


// === Se Impersonal Continuous ===
(function(){
  const sentences=[
  ["hablar", "se habla", "español, inglés y francés en esta empresa."],
  ["comer", "se come", "muy bien en este restaurante."],
  ["escribir", "se escribe", "mucho en la universidad."],
  ["trabajar", "se trabaja", "duro en esta compañía."],
  ["viajar", "se viaja", "mucho en verano."],
  ["aceptar", "se aceptan", "tarjetas de crédito en esta tienda."],
  ["prohibir", "se prohíbe", "hablar en la biblioteca."],
  ["necesitar", "se necesita", "un nuevo empleado para el departamento de ventas."],
  ["organizar", "se organizan", "eventos culturales todos los meses en el centro comunitario."],
  ["producir", "se producen", "muchos automóviles en esta fábrica."],
  ["investigar", "se investiga", "una nueva vacuna contra la enfermedad."],
  ["celebrar", "se celebra", "el cumpleaños de María el próximo sábado."],
  ["recomendar", "se recomienda", "visitar el parque nacional."],
  ["alquilar", "se alquilan", "bicicletas en la playa."],
  ["vender", "se venden", "entradas para el concierto."],
  ["buscar", "se busca", "una casa en el campo."],
  ["necesitar", "se necesita", "paciencia para aprender un nuevo idioma."],
  ["hablar", "se habla", "español como lengua materna en este país."],
  ["comer", "se come", "muy bien y barato aquí."],
  ["aprender", "se aprende", "mucho en la escuela."],
  ["viajar", "se viaja", "a lugares exóticos durante las vacaciones."],
  ["decir", "se dice", "que el ejercicio físico es bueno para la salud."],
  ["esperar", "se espera", "que la economía mejore el próximo año."],
  ["vender", "se venden", "muchas prendas en esta tienda."],
  ["hablar", "se habla", "árabe en este hotel."],
  ["prohibir", "se prohíbe", "la venta de alcohol a menores de edad."],
  ["prohibir", "se prohíben", "los teléfonos móviles en la escuela."],
  ["jugar", "se juega", "mucho al fútbol en Costa Rica."],
  ["usar", "se usa", "el tiempo libre para estudiar el español."],
  ["hacer", "se hacen", "los sombreros panameños en Ecuador."]
];
  const quiz=document.getElementById("quiz-imp2");
  sentences.forEach((item,i)=>{
    const li=document.createElement("li");
    li.innerHTML=`Se <input type="text" id="imp2-${i}" class="border rounded px-2 py-1 w-32 text-base" placeholder="verbo"> ${item[2]} <span class="text-sm text-gray-500">( ${item[0]} )</span>`;
    quiz.appendChild(li);
  });
  document.getElementById("btn-imp2").addEventListener("click",()=>{
    let correct=0;
    sentences.forEach((item,i)=>{
      const input=document.getElementById(`imp2-${i}`);
      const user=("se "+input.value.trim().toLowerCase()).replace(/\s+/g," ");
      if(user===item[1]){input.classList.add("border-green-500","bg-green-50");correct++;}
      else{input.classList.add("border-red-400","bg-red-50");}
    });
    document.getElementById("score-imp2").textContent=`✅ ${correct} de ${sentences.length} correctas`;
  });
})();

// === Se Accidental Extended ===
(function(){
  const answers={
    q1:["se te cayeron"], q2:["se les perdió"], q3:["se le quedó"], q4:["se nos olvidó"], q5:["se le cayó"],
    q6:["se me perdieron"], q7:["se les acabó"], q8:["se le rompió"], q9:["se les olvidó"], q10:["se te quemó"],
    q11:["se le perdió"], q12:["se nos olvidó"], q13:["se les rompieron"], q14:["se te quedó"], q15:["se me quemó"],
    q16:["se le cayeron"], q17:["se nos perdieron"], q18:["se les acabó"], q19:["se le rompió"], q20:["se me cayó"],
    q21:["se le olvidó"], q22:["se les quedó"], q23:["se nos rompió"], q24:["se les cayó"], q25:["se me perdió"],
    q26:["se le acabó"], q27:["se te olvidó"], q28:["se nos quemaron"], q29:["se les rompió"], q30:["se le cayó"]
  };
  const list=document.getElementById("acc-list");
  Object.keys(answers).forEach((id,i)=>{
    const li=document.createElement("li");
    li.innerHTML=`<input type="text" id="${id}" class="border rounded px-2 py-1 w-72" placeholder="Escribe aquí"> <span class="text-sm text-gray-500">( ${Object.values(answers)[i]} )</span>`;
    list.appendChild(li);
  });
  document.getElementById("btn-acc2").addEventListener("click",()=>{
    let correct=0;
    Object.keys(answers).forEach(id=>{
      const input=document.getElementById(id);
      const user=input.value.trim().toLowerCase();
      if(answers[id].includes(user)){input.classList.add("border-green-500","bg-green-50");correct++;}
      else{input.classList.add("border-red-400","bg-red-50");}
    });
    document.getElementById("score-acc2").textContent=`✅ ${correct} de ${Object.keys(answers).length} correctas`;
  });
})();
</script>

