  <script>
    // Pairs (left = Spanish, right = English). Keys must be unique.
    const PAIRS = [
      { key: "brazo", left: "el brazo", right: "arm" },
      { key: "tobillo", left: "el tobillo", right: "ankle" },
      { key: "distraido", left: "distra√≠do/a", right: "distracted" },
      { key: "cojera", left: "la cojera", right: "limp" },
      { key: "ojo", left: "el ojo", right: "eye" },
      { key: "menosmal", left: "menos mal", right: "it‚Äôs a good thing" },
      { key: "pobrecito", left: "pobrecito/a", right: "poor thing" },
      { key: "roto", left: "roto/a", right: "broken" },
      { key: "corazon", left: "el coraz√≥n", right: "heart" },
      { key: "dedopie", left: "el dedo del pie", right: "toe" },
    ];

    // Utility: shuffle array
    function shuffle(arr) {
      const a = arr.slice();
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random()* (i+1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    const leftCol = document.getElementById("leftCol");
    const rightCol = document.getElementById("rightCol");
    const scoreEl = document.getElementById("score");
    const checkBtn = document.getElementById("checkBtn");
    const revealBtn = document.getElementById("revealBtn");
    const resetBtn = document.getElementById("resetBtn");

    function render() {
      scoreEl.textContent = "";
      leftCol.innerHTML = "";
      rightCol.innerHTML = "";

      // Build left column (dropzones)
      PAIRS.forEach((p, idx) => {
        const row = document.createElement("div");
        row.className = "flex items-center gap-3 bg-white border rounded-xl p-2 shadow-sm";
        row.innerHTML = `
          <div class="w-8 h-8 grid place-content-center rounded-lg bg-indigo-50 text-indigo-700 font-semibold">${idx+1}</div>
          <div class="flex-1">${p.left}</div>
          <div class="w-1/2 dropzone border-2 border-dashed border-gray-300 rounded-lg p-2 text-sm text-gray-400"
               data-accept="${p.key}" ondragover="event.preventDefault()"></div>
        `;
        leftCol.appendChild(row);
      });

      // Build right column (draggables)
      shuffle(PAIRS).forEach(p => {
        const card = document.createElement("div");
        card.className = "draggable bg-white border rounded-xl p-3 shadow-sm cursor-move";
        card.draggable = true;
        card.dataset.key = p.key;
        card.textContent = p.right;

        card.addEventListener("dragstart", e => {
          card.classList.add("dragging");
          e.dataTransfer.setData("text/plain", p.key);
        });
        card.addEventListener("dragend", () => card.classList.remove("dragging"));

        rightCol.appendChild(card);
      });

      // Drop behavior for each dropzone
      leftCol.querySelectorAll(".dropzone").forEach(zone => {
        zone.addEventListener("drop", e => {
          e.preventDefault();
          const key = e.dataTransfer.getData("text/plain");
          const dragged = rightCol.querySelector(`.draggable[data-key="${key}"]`);
          if (!dragged) return;

          // If zone already has a card, send it back to right column
          const existing = zone.querySelector(".draggable");
          if (existing) rightCol.appendChild(existing);

          zone.textContent = "";
          zone.classList.remove("text-gray-400");
          zone.appendChild(dragged);
        });
      });
    }

    function checkAnswers() {
      let correct = 0, total = PAIRS.length;
      leftCol.querySelectorAll(".dropzone").forEach(zone => {
        const expect = zone.dataset.accept;
        const placed = zone.querySelector(".draggable");
        zone.classList.remove("ring-2","ring-red-400","ring-green-500","bg-green-50","bg-red-50");
        if (placed && placed.dataset.key === expect) {
          correct++;
          zone.classList.add("ring-2","ring-green-500","bg-green-50");
        } else {
          zone.classList.add("ring-2","ring-red-400","bg-red-50");
        }
      });
      scoreEl.textContent = `Resultado: ${correct}/${total}`;
    }

    function revealAll() {
      // Put every card into its matching zone
      leftCol.querySelectorAll(".dropzone").forEach(zone => {
        const key = zone.dataset.accept;
        const card = rightCol.querySelector(`.draggable[data-key="${key}"]`) ||
                     leftCol.querySelector(`.draggable[data-key="${key}"]`);
        if (!card) return;

        // If zone has a different card, return it first
        const existing = zone.querySelector(".draggable");
        if (existing && existing.dataset.key !== key) rightCol.appendChild(existing);

        zone.textContent = "";
        zone.classList.remove("text-gray-400");
        zone.appendChild(card);
      });
      checkAnswers();
    }

    function resetAll() {
      render();
    }

    checkBtn.addEventListener("click", checkAnswers);
    revealBtn.addEventListener("click", revealAll);
    resetBtn.addEventListener("click", resetAll);

    // Init
    render();
  </script>
</body>
</html></div>
</section>



