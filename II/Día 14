    <!-- Se impersonal (Presente) -->
    <section class="bg-white border rounded-xl shadow-sm p-6">
      <h2 class="text-2xl font-semibold text-sky-700 mb-4">Se impersonal (presente)</h2>

      <p class="bg-gray-100 border-l-4 border-sky-500 p-3 mb-5"><strong>Modelo:</strong> <span class="text-sky-700 font-semibold">Se enseñan</span> (enseñar) cinco lenguas en esta escuela.</p>

      <ol class="space-y-4">
        <li>
          <input type="text" id="q1" class="border rounded px-2 py-1 w-56" placeholder="Escribe aquí">
          (comer) muy bien en Las Delicias.
        </li>
        <li>
          <input type="text" id="q2" class="border rounded px-2 py-1 w-56" placeholder="Escribe aquí">
          (vender) muchas camisetas allí.
        </li>
        <li>
          <input type="text" id="q3" class="border rounded px-2 py-1 w-56" placeholder="Escribe aquí">
          (servir) platos exquisitos cada noche.
        </li>
      </ol>
    </section>

    <!-- Se accidental (Pretérito) -->
    <section class="bg-white border rounded-xl shadow-sm p-6">
      <h2 class="text-2xl font-semibold text-sky-700 mb-4">Se accidental (pretérito)</h2>

      <p class="bg-gray-100 border-l-4 border-sky-500 p-3 mb-5"><strong>Modelo:</strong> <span class="text-sky-700 font-semibold">Se me rompieron</span> (I broke) las gafas.</p>

      <ol start="4" class="space-y-4">
        <li>
          <input type="text" id="q4" class="border rounded px-2 py-1 w-64" placeholder="Escribe aquí">
          (You [fam., sing.] dropped) las pastillas.
        </li>
        <li>
          <input type="text" id="q5" class="border rounded px-2 py-1 w-64" placeholder="Escribe aquí">
          (They lost) la receta.
        </li>
        <li>
          <input type="text" id="q6" class="border rounded px-2 py-1 w-64" placeholder="Escribe aquí">
          (You [form., sing.] left) aquí la radiografía.
        </li>
      </ol>
    </section>

    <!-- Button -->
    <div class="text-center">
      <button id="checkBtn" class="bg-sky-600 hover:bg-sky-700 text-white font-semibold py-2 px-6 rounded-lg">
        Verificar
      </button>
      <p id="score" class="mt-4 text-lg font-semibold"></p>
    </div>
  </div>

  <script>
    // Correct answers
    const answers = {
      q1: ["se come"],
      q2: ["se venden"],
      q3: ["se sirven"],
      q4: ["se te cayeron"],
      q5: ["se les perdió"],
      q6: ["se le quedó"]
    };

    // Verification
    document.getElementById("checkBtn").addEventListener("click", () => {
      let correct = 0;
      Object.keys(answers).forEach(id => {
        const input = document.getElementById(id);
        const user = input.value.trim().toLowerCase();
        if (answers[id].includes(user)) {
          input.classList.remove("border-red-400", "bg-red-50");
          input.classList.add("border-green-500", "bg-green-50");
          correct++;
        } else {
          input.classList.remove("border-green-500", "bg-green-50");
          input.classList.add("border-red-400", "bg-red-50");
        }
      });
      document.getElementById("score").textContent = `✅ ${correct} de ${Object.keys(answers).length} correctas`;
    });
  </script>
</body>
</html>





<!--práctica de se inesperado-->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
