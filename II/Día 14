  <script>
  document.addEventListener("DOMContentLoaded", function() {
    const answers = {
      q1:["se te cayeron"], q2:["se les perdió"], q3:["se le quedó"], q4:["se nos olvidó"], q5:["se le cayó"],
      q6:["se me perdieron"], q7:["se les acabó"], q8:["se le rompió"], q9:["se les olvidó"], q10:["se te quemó"],
      q11:["se le perdió"], q12:["se nos olvidó"], q13:["se les rompieron"], q14:["se te quedó"], q15:["se me quemó"],
      q16:["se le cayeron"], q17:["se nos perdieron"], q18:["se les acabó"], q19:["se le rompió"], q20:["se me cayó"],
      q21:["se le olvidó"], q22:["se les quedó"], q23:["se nos rompió"], q24:["se les cayó"], q25:["se me perdió"],
      q26:["se le acabó"], q27:["se te olvidó"], q28:["se nos quemaron"], q29:["se les rompió"], q30:["se le cayó"]
    };

    document.getElementById("checkBtn").addEventListener("click", function() {
      let correct = 0;
      Object.keys(answers).forEach(function(id) {
        const input = document.getElementById(id);
        const user = input.value.trim().toLowerCase();
        if (answers[id].includes(user)) {
          input.classList.remove("border-red-400","bg-red-50");
          input.classList.add("border-green-500","bg-green-50");
          correct++;
        } else {
          input.classList.remove("border-green-500","bg-green-50");
          input.classList.add("border-red-400","bg-red-50");
        }
      });
      document.getElementById("score").textContent =
        "✅ " + correct + " de " + Object.keys(answers).length + " correctas";
    });
  });
  </script>
</body>
