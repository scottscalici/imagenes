  <script>
    function toggleVocab() {
      const box = document.getElementById("vocabBox");
      if (!box) return;
      const isHidden = box.classList.contains("hidden");
      if (isHidden) {
        box.classList.remove("hidden");
      } else {
        box.classList.add("hidden");
      }
    }
  </script>
