<script>
(function(){
  const sect = document.currentScript.previousElementSibling;
  const inputs = sect.querySelectorAll('.cloze-inp');
  const checkBtn = sect.querySelector('.cloze-check');
  const resetBtn = sect.querySelector('.cloze-reset');

  function normalize(s){ return (s||"").trim().toLowerCase(); }
  function checkOne(el){
    const ok = normalize(el.value) === normalize(el.dataset.answer);
    el.classList.remove('ring-2','ring-red-400','ring-emerald-400');
    el.classList.add('ring-2', ok ? 'ring-emerald-400' : 'ring-red-400');
    return ok;
  }
  inputs.forEach((inp, i)=>{
    inp.addEventListener('keydown', e=>{
      if(e.key === 'Enter'){
        e.preventDefault();
        const correct = checkOne(inp);
        if(correct && inputs[i+1]) inputs[i+1].focus();
      }
    });
  });
  checkBtn.addEventListener('click', ()=> inputs.forEach(checkOne));
  resetBtn.addEventListener('click', ()=>{
    inputs.forEach(i=>{ i.value=''; i.classList.remove('ring-2','ring-red-400','ring-emerald-400'); });
    inputs[0]?.focus();
  });
})();
</script>
