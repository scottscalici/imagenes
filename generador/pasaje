  <script>
    function escapeHtml(str) {
      return str
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;");
    }

    function buildStudentHtml(obra, titulo, extracto, preguntas) {
      const obraLine = obra
        ? `<p class="font-semibold">Obra: <span class="font-normal">${escapeHtml(obra)}</span></p>`
        : "";
      const tituloLine = titulo
        ? `<p class="font-semibold">Pasaje: <span class="font-normal">${escapeHtml(titulo)}</span></p>`
        : "";

      const preguntasLis = preguntas.length
        ? preguntas.map(q => `          <li>${escapeHtml(q)}</li>`).join("\n")
        : "          <!-- (A√∫n no se han a√±adido preguntas) -->";

      const extractoEscapado = escapeHtml(extracto);

      // IMPORTANT: note the <\/script> to avoid closing the outer script
      return `<!-- ===== Pasaje literario ‚Äì P√ÅGINA DEL ESTUDIANTE ===== -->
<section class="space-y-6">

  <header class="shadow rounded-xl overflow-hidden">
    <div class="bg-purple-700 text-white py-6 px-6 flex flex-col md:flex-row md:justify-between md:items-center gap-2">
      <div>
        <h1 class="text-3xl font-bold drop-shadow">Pasaje literario</h1>
        <p class="italic text-sm md:text-base opacity-90">
          Pr√°ctica independiente para el oral individual
        </p>
      </div>
      <div class="text-sm md:text-base text-right md:text-right space-y-1">
        ${obraLine}
        ${tituloLine}
      </div>
    </div>
  </header>

  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#6D28D9;">
    <div class="p-6 space-y-3">
      <h2 class="text-xl font-bold text-gray-800 mb-2 flex items-center gap-2">
        <span>üß≠ Instrucciones</span>
      </h2>
      <ol class="list-decimal list-inside space-y-2 text-gray-800 text-sm md:text-base">
        <li>Lee el pasaje literario con atenci√≥n.</li>
        <li>Analiza el contexto, los personajes, el tono y los recursos literarios.</li>
        <li>Piensa en un posible enfoque o pregunta gu√≠a para tu oral individual.</li>
        <li>Cuando est√©s listo, haz clic en el bot√≥n para mostrar las preguntas de pr√°ctica.</li>
      </ol>
    </div>
  </section>

  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#10B981;">
    <div class="p-6 space-y-4">
      <h2 class="text-xl font-bold text-gray-800 mb-2 flex items-center gap-2">
        <span>üìñ Pasaje literario</span>
      </h2>
      <p class="text-sm text-gray-500 italic">
        Lee este fragmento con calma. Puedes subrayar, anotar ideas clave y pensar en la relaci√≥n con la obra completa.
      </p>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 leading-relaxed text-gray-900 whitespace-pre-wrap">
${extractoEscapado}
      </div>
    </div>
  </section>

  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#F59E0B;">
    <div class="p-6 space-y-4">
      <div class="flex items-center justify-between gap-4">
        <h2 class="text-xl font-bold text-gray-800 flex items-center gap-2">
          <span>üé§ Preguntas de pr√°ctica</span>
        </h2>
        <button
          id="toggleQuestionsBtn"
          class="px-4 py-2 text-sm font-semibold rounded-full border border-amber-500 text-amber-700 hover:bg-amber-50 transition"
        >
          Mostrar preguntas
        </button>
      </div>
      <p class="text-sm text-gray-500 italic">
        Primero prepara tus ideas sin ver estas preguntas. Despu√©s, √∫salas para practicar como si el profesor estuviera contigo.
      </p>

      <div id="questionsBlock" class="space-y-3 hidden">
        <ul class="list-disc list-inside space-y-2 text-gray-800 text-sm md:text-base">
${preguntasLis}
        </ul>
      </div>
    </div>
  </section>

</section>

<script>
  (function () {
    const btn = document.getElementById('toggleQuestionsBtn');
    const block = document.getElementById('questionsBlock');
    if (!btn || !block) return;
    btn.addEventListener('click', function () {
      const isHidden = block.classList.contains('hidden');
      if (isHidden) {
        block.classList.remove('hidden');
        btn.textContent = 'Ocultar preguntas';
      } else {
        block.classList.add('hidden');
        btn.textContent = 'Mostrar preguntas';
      }
    });
  })();
<\/script>
<!-- ===== Fin p√°gina del estudiante ===== -->`;
    }

    function buildTeacherHtml(obra, titulo, extracto, preguntas, notas) {
      const extractoEscapado = escapeHtml(extracto);
      const notasEscapadas = escapeHtml(notas);
      const preguntasLis = preguntas.length
        ? preguntas.map(q => `          <li>${escapeHtml(q)}</li>`).join("\n")
        : "          <!-- (A√∫n no se han a√±adidos preguntas) -->";

      return `<!-- ===== Pasaje literario ‚Äì FICHA DEL PROFESOR ===== -->
<section class="space-y-6">

  <header class="shadow rounded-xl overflow-hidden">
    <div class="bg-indigo-900 text-white py-6 px-6 flex flex-col md:flex-row md:justify-between md:items-center gap-2">
      <div>
        <h1 class="text-3xl font-bold drop-shadow">Pasaje literario ‚Äì Profesor</h1>
        <p class="italic text-sm md:text-base opacity-90">
          Ficha de preparaci√≥n para el oral individual.
        </p>
      </div>
      <div class="text-sm md:text-base text-right md:text-right space-y-1">
        ${obra ? `<p class="font-semibold">Obra: <span class="font-normal">${escapeHtml(obra)}</span></p>` : ""}
        ${titulo ? `<p class="font-semibold">Pasaje: <span class="font-normal">${escapeHtml(titulo)}</span></p>` : ""}
      </div>
    </div>
  </header>

  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#4F46E5;">
    <div class="p-6 space-y-3 text-sm md:text-base">
      <h2 class="text-xl font-bold text-gray-800 mb-2">Resumen r√°pido</h2>
      <ul class="list-disc list-inside space-y-1 text-gray-800">
        <li>Obra: ${obra ? escapeHtml(obra) : "(no especificada)"}</li>
        <li>Pasaje: ${titulo ? escapeHtml(titulo) : "(no especificado)"}</li>
      </ul>
    </div>
  </section>

  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#10B981;">
    <div class="p-6 space-y-4">
      <h2 class="text-xl font-bold text-gray-800 mb-2">üìñ Pasaje (texto en espa√±ol)</h2>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 leading-relaxed text-gray-900 whitespace-pre-wrap text-sm md:text-base">
${extractoEscapado}
      </div>
    </div>
  </section>

  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#F59E0B;">
    <div class="p-6 space-y-3">
      <h2 class="text-xl font-bold text-gray-800 mb-2">üé§ Preguntas previstas</h2>
      <ul class="list-disc list-inside space-y-2 text-gray-800 text-sm md:text-base">
${preguntasLis}
      </ul>
    </div>
  </section>

  ${notas.trim() ? `
  <section class="bg-white rounded-xl shadow border-l-4" style="border-color:#EC4899;">
    <div class="p-6 space-y-3">
      <h2 class="text-xl font-bold text-gray-800 mb-2">üìù Notas del profesor</h2>
      <p class="text-xs text-gray-500 italic mb-2">
        Puedes pegar aqu√≠ temas, traducciones al ingl√©s, posibles respuestas modelo, observaciones de evaluaci√≥n, etc.
      </p>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 whitespace-pre-wrap text-xs md:text-sm text-gray-900 leading-relaxed">
${notasEscapadas}
      </div>
    </div>
  </section>
  ` : ""}

</section>
<!-- ===== Fin ficha del profesor ===== -->`;
    }

    document.getElementById("generateBtn").addEventListener("click", function () {
      const obra = document.getElementById("obraSelect").value.trim();
      const titulo = document.getElementById("tituloPasaje").value.trim();
      const extracto = document.getElementById("extracto").value.trim();
      const preguntasRaw = document.getElementById("preguntas").value.trim();
      const notas = document.getElementById("notasProfe").value;

      const preguntas = preguntasRaw
        ? preguntasRaw.split(/\r?\n/).map(l => l.trim()).filter(l => l.length > 0)
        : [];

      const studentHtml = buildStudentHtml(obra, titulo, extracto, preguntas);
      const teacherHtml = buildTeacherHtml(obra, titulo, extracto, preguntas, notas);

      document.getElementById("outputStudent").value = studentHtml;
      document.getElementById("outputTeacher").value = teacherHtml;
    });

    // Tab switching
    const tabStudent = document.getElementById("tabStudent");
    const tabTeacher = document.getElementById("tabTeacher");
    const outputStudent = document.getElementById("outputStudent");
    const outputTeacher = document.getElementById("outputTeacher");

    tabStudent.addEventListener("click", function () {
      tabStudent.classList.add("border-purple-700", "text-purple-700", "bg-purple-50");
      tabStudent.classList.remove("border-gray-300", "text-gray-600");
      tabTeacher.classList.remove("border-purple-700", "text-purple-700", "bg-purple-50");
      tabTeacher.classList.add("border-gray-300", "text-gray-600");
      outputStudent.classList.remove("hidden");
      outputTeacher.classList.add("hidden");
    });

    tabTeacher.addEventListener("click", function () {
      tabTeacher.classList.add("border-purple-700", "text-purple-700", "bg-purple-50");
      tabTeacher.classList.remove("border-gray-300", "text-gray-600");
      tabStudent.classList.remove("border-purple-700", "text-purple-700", "bg-purple-50");
      tabStudent.classList.add("border-gray-300", "text-gray-600");
      outputTeacher.classList.remove("hidden");
      outputStudent.classList.add("hidden");
    });
  </script>
</body>
