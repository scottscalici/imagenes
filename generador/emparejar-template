<script>
  // EDITA LA CLAVE SEGÚN TU ACTIVIDAD:
  const CLAVE = { A: "3", B: "1", C: "5", D: "2", E: "4" };

  document.getElementById('check-match').addEventListener('click', () => {
    document.querySelectorAll('select[data-letter]').forEach(sel => {
      const letra = sel.getAttribute('data-letter');
      const ok = sel.value === (CLAVE[letra] || "");
      sel.style.boxShadow = ok
        ? '0 0 0 2px rgba(34,197,94,.7) inset'   // verde
        : '0 0 0 2px rgba(239,68,68,.7) inset';  // rojo
    });
  });
</script>
