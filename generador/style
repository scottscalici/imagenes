  <div class="max-w-4xl mx-auto space-y-6">
    <!-- Controls -->
    <div class="bg-gray-100 p-4 rounded-xl shadow">
      <h2 class="text-lg font-bold mb-2">游꿛 Choose Your Style</h2>
      <form id="styleForm" class="grid grid-cols-2 gap-4">
        <div>
          <label class="block font-medium">Primary Color:</label>
          <input type="color" name="primary" value="#f87171" class="w-full h-10 rounded border" />
        </div>
        <div>
          <label class="block font-medium">Secondary Color:</label>
          <input type="color" name="secondary" value="#facc15" class="w-full h-10 rounded border" />
        </div>
        <div>
          <label class="block font-medium">Background:</label>
          <select name="background" class="w-full rounded border h-10">
            <option value="white">White</option>
            <option value="gray-100">Gray</option>
            <option value="gradient">Tomato Gradient</option>
          </select>
        </div>
        <div>
          <label class="block font-medium">Icon:</label>
          <select name="icon" class="w-full rounded border h-10">
            <option value="游꼔">Tomato</option>
            <option value="游꿠">Drama</option>
            <option value="游꺛">Romance</option>
            <option value="游댠">Fire</option>
            <option value="游닀">Book</option>
            <option value="游꿚">Music</option>
          </select>
        </div>
      </form>
      <button onclick="applyStyle()" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded shadow hover:bg-blue-600">Apply Style</button>
    </div>

    <!-- Styled Output Preview -->
    <div id="output" class="p-6 rounded-xl border border-gray-200 bg-white">
      <h1 id="title" class="text-2xl font-bold mb-4">游닀 Sample Lesson Plan</h1>
      <p class="mb-2">Esta clase cubrir치 los usos del pret칠rito y del imperfecto con ejemplos y pr치ctica guiada.</p>
      <ul class="list-disc list-inside">
        <li>Introducci칩n con im치genes 游닞</li>
        <li>Discusi칩n en grupos peque침os 游논</li>
        <li>Pr치ctica independiente 九꽲잺</li>
      </ul>
    </div>
  </div>

  <script>
    function applyStyle() {
      const form = document.forms["styleForm"];
      const primary = form["primary"].value;
      const secondary = form["secondary"].value;
      const background = form["background"].value;
      const icon = form["icon"].value;

      const output = document.getElementById("output");
      const title = document.getElementById("title");

      // Apply background
      output.className = "p-6 rounded-xl border";
      if (background === "white") {
        output.classList.add("bg-white");
      } else if (background === "gray-100") {
        output.classList.add("bg-gray-100");
      } else {
        output.style.background = "linear-gradient(to right, #f87171, #facc15)";
      }

      // Apply border
      output.style.borderColor = primary;

      // Apply icon
      title.textContent = `${icon} Sample Lesson Plan`;

      // Apply color scheme
      title.style.color = primary;
      const items = output.querySelectorAll("li");
      items.forEach((li, i) => {
        li.style.color = i % 2 === 0 ? primary : secondary;
      });
    }
  </script>

</body>
