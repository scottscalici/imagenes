  <script>
    function eqAccent(a,b){ return a.trim().toLocaleLowerCase('es')===b.trim().toLocaleLowerCase('es'); }

    // Gustar answers
    const answers={a1p:"me",a1v:"gusta",a2p:"te",a2v:"gustan",a3p:"le",a3v:"gustó",a4p:"nos",a4v:"gusta",a5p:"os",a5v:"gustan",a6p:"les",a6v:"gustan",
      b1:"Les gusta la playa.",b2:"Me gustó el concierto.",b3:"¿Te gusta bailar?",b4:"Nos gustó la comida.",b5:"Os gusta nadar.",b6:"A ella le gustó el regalo."};

    function checkAll(){
      let correct=0,total=0;
      document.querySelectorAll('#practica input').forEach(inp=>{
        total++;
        let id=inp.dataset.id,val=inp.value.trim();
        if(answers[id] && eqAccent(val,answers[id])){ inp.classList.add('is-correct'); inp.classList.remove('is-wrong'); correct++; }
        else { inp.classList.add('is-wrong'); inp.classList.remove('is-correct'); }
      });
      document.getElementById('score').textContent=`${correct}/${total}`;
    }
    function revealAll(){ document.querySelectorAll('#practica input').forEach(inp=>{ inp.value=answers[inp.dataset.id]||""; inp.classList.remove('is-wrong'); inp.classList.add('is-correct'); }); }
    function resetAll(){ document.querySelectorAll('#practica input').forEach(inp=>{ inp.value=""; inp.classList.remove('is-wrong','is-correct'); }); document.getElementById('score').textContent=""; }
    document.getElementById('checkBtn').onclick=checkAll;
    document.getElementById('revealBtn').onclick=revealAll;
    document.getElementById('resetBtn').onclick=resetAll;

    // Verbos como gustar answers
    const answers2={c1p:"me",c1v:"encanta",c2p:"les",c2v:"interesan",c3p:"nos",c3v:"molesta",c4p:"me",c4v:"duelen"};
    function checkAll2(){
      let correct=0,total=0;
      document.querySelectorAll('#practica-como-gustar input').forEach(inp=>{
        total++;
        let id=inp.dataset.id,val=inp.value.trim();
        if(answers2[id] && eqAccent(val,answers2[id])){ inp.classList.add('is-correct'); inp.classList.remove('is-wrong'); correct++; }
        else { inp.classList.add('is-wrong'); inp.classList.remove('is-correct'); }
      });
      document.getElementById('score2').textContent=`${correct}/${total}`;
    }
    function revealAll2(){ document.querySelectorAll('#practica-como-gustar input').forEach(inp=>{ inp.value=answers2[inp.dataset.id]||""; inp.classList.remove('is-wrong'); inp.classList.add('is-correct'); }); }
    function resetAll2(){ document.querySelectorAll('#practica-como-gustar input').forEach(inp=>{ inp.value=""; inp.classList.remove('is-wrong','is-correct'); }); document.getElementById('score2').textContent=""; }
    document.getElementById('checkBtn2').onclick=checkAll2;
    document.getElementById('revealBtn2').onclick=revealAll2;
    document.getElementById('resetBtn2').onclick=resetAll2;
  </script>
