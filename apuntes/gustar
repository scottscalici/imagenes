<script>
  function eqCaseAccent(a, b) {
    if (!a || !b) return false;
    return a.trim().toLocaleLowerCase('es') === b.trim().toLocaleLowerCase('es');
  }

  const answers2 = {
    c1p: "me", c1v: "encanta",
    c2p: "les", c2v: "interesan",
    c3p: "nos", c3v: "molesta",
    c4p: "me", c4v: "duelen"
  };

  const btnCheck2 = document.getElementById('checkBtn2');
  const btnReveal2 = document.getElementById('revealBtn2');
  const btnReset2 = document.getElementById('resetBtn2');
  const score2 = document.getElementById('score2');

  function inputs2() {
    return Array.from(document.querySelectorAll('#practica-como-gustar input[type="text"]'));
  }

  function reset2() {
    inputs2().forEach(i => {
      i.value = '';
      i.classList.remove('is-correct','is-wrong');
    });
    score2.textContent = '';
  }

  function reveal2() {
    for (const [k,v] of Object.entries(answers2)) {
      const f = document.querySelector(`#practica-como-gustar input[data-id="${k}"]`);
      if (f) f.value = v;
    }
    score2.textContent = '';
    inputs2().forEach(i => i.classList.remove('is-correct','is-wrong'));
  }

  function check2() {
    let total=0, correct=0;
    for (const [k,v] of Object.entries(answers2)) {
      total++;
      const f = document.querySelector(`#practica-como-gustar input[data-id="${k}"]`);
      if (!f) continue;
      const u = f.value||'';
      const ok = eqCaseAccent(u,v);
      f.classList.toggle('is-correct', ok);
      f.classList.toggle('is-wrong', !ok);
      if (ok) correct++;
    }
    score2.textContent = `Puntaje: ${correct}/${total}`;
  }

  btnCheck2.addEventListener('click', check2);
  btnReveal2.addEventListener('click', reveal2);
  btnReset2.addEventListener('click', reset2);
</script>
  </main>

  <script>
    // Utilidad: comparación insensible a mayúsculas pero SENSIBLE a acentos
    function eqCaseInsensitiveAccentSensitive(a, b) {
      if (!a || !b) return false;
      return a.trim().toLocaleLowerCase('es') === b.trim().toLocaleLowerCase('es');
    }

    // Respuestas correctas
    const answers = {
      // A)
      a1p: "me", a1v: "gusta",
      a2p: "te", a2v: "gustan",
      a3p: "le", a3v: "gustó",
      a4p: "nos", a4v: "gusta",
      a5p: "os", a5v: "gustan",
      a6p: "les", a6v: "gustan",
      // B) Aceptamos una de varias formas "modelo" para cada ítem.
      // Puedes ampliar estos arrays si quieres admitir más variantes.
      b1: ["les gusta la playa"],
      b2: ["me gustó el concierto"],
      b3: ["¿te gusta bailar?", "te gusta bailar?"], // permite omitir signo inicial por tecleo
      b4: ["nos gustó la comida"],
      b5: ["os gusta nadar"],
      b6: ["a ella le gustó el regalo", "le gustó el regalo"]
    };

    const checkBtn = document.getElementById('checkBtn');
    const revealBtn = document.getElementById('revealBtn');
    const resetBtn = document.getElementById('resetBtn');
    const scoreEl = document.getElementById('score');

    function allInputs() {
      return Array.from(document.querySelectorAll('input[type="text"]'));
    }

    function clearMarks() {
      allInputs().forEach(inp => {
        inp.classList.remove('is-correct','is-wrong');
      });
      scoreEl.textContent = '';
    }

    function revealAll() {
      for (const [key, val] of Object.entries(answers)) {
        const field = document.querySelector(`input[data-id="${key}"]`);
        if (!field) continue;
        if (Array.isArray(val)) {
          field.value = val[0]; // muestra la primera variante
        } else {
          field.value = val;
        }
      }
      clearMarks();
    }

    function resetAll() {
      allInputs().forEach(inp => inp.value = '');
      clearMarks();
    }

    function checkAll() {
      let correct = 0, total = 0;

      for (const [key, val] of Object.entries(answers)) {
        total++;
        const field = document.querySelector(`input[data-id="${key}"]`);
        if (!field) continue;
        const user = field.value || '';
        let ok = false;

        if (Array.isArray(val)) {
          ok = val.some(v => eqCaseInsensitiveAccentSensitive(user, v));
        } else {
          ok = eqCaseInsensitiveAccentSensitive(user, val);
        }

        field.classList.toggle('is-correct', ok);
        field.classList.toggle('is-wrong', !ok);
        if (ok) correct++;
      }
      scoreEl.textContent = `Puntaje: ${correct}/${total}`;
    }

    checkBtn.addEventListener('click', checkAll);
    revealBtn.addEventListener('click', revealAll);
    resetBtn.addEventListener('click', resetAll);
  </script>


</body>
</html>
