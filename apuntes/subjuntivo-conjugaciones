          </select>
        </div>
        <div class="flex items-end gap-2">
          <button id="loadChart" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded">Cargar tabla</button>
          <button id="checkChart" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">Revisar</button>
          <button id="resetChart" class="bg-red-100 hover:bg-red-200 text-red-800 px-4 py-2 rounded">Limpiar</button>
        </div>
      </div>
      <div id="chart" class="mt-4 overflow-x-auto hidden">
        <table class="min-w-full text-sm">
          <thead><tr class="bg-gray-100"><th class="text-left p-2">Sujeto</th><th class="text-left p-2">Forma</th></tr></thead>
          <tbody>
            <tr class="border-t"><td class="p-2">yo</td><td class="p-2"><input data-person="yo" class="border rounded px-2 w-full" /></td></tr>
            <tr class="border-t"><td class="p-2">t√∫</td><td class="p-2"><input data-person="t√∫" class="border rounded px-2 w-full" /></td></tr>
            <tr class="border-t"><td class="p-2">√©l/ella/Ud.</td><td class="p-2"><input data-person="√©l" class="border rounded px-2 w-full" /></td></tr>
            <tr class="border-t"><td class="p-2">nosotros</td><td class="p-2"><input data-person="nosotros" class="border rounded px-2 w-full" /></td></tr>
            <tr class="border-t"><td class="p-2">vosotros</td><td class="p-2"><input data-person="vosotros" class="border rounded px-2 w-full" /></td></tr>
            <tr class="border-t"><td class="p-2">ellos/Uds.</td><td class="p-2"><input data-person="ellos" class="border rounded px-2 w-full" /></td></tr>
          </tbody>
        </table>
        <div id="score2" class="mt-2 font-semibold text-indigo-700"></div>
      </div>
    </section>

    <!-- Pr√°ctica 3: Yo del presente vs. yo del subjuntivo -->
    <section class="bg-white rounded-xl shadow p-6 border border-gray-100" id="practica3">
      <h2 class="text-xl font-semibold text-indigo-700 mb-2">Pr√°ctica 3: "yo" del presente (indicativo) vs. "yo" del subjuntivo</h2>
      <p class="text-sm text-gray-600 mb-3">Completa las dos columnas para cada verbo. Consejo: piensa <span class="kbd">yo</span> del presente ‚Üí quita <span class="kbd">-o</span> ‚Üí a√±ade terminaci√≥n opuesta para formar el subjuntivo.</p>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="bg-gray-100">
              <th class="text-left p-2">Verbo</th>
              <th class="text-left p-2">yo (presente de indicativo)</th>
              <th class="text-left p-2">yo (subjuntivo presente)</th>
            </tr>
          </thead>
          <tbody id="yoTableBody"></tbody>
        </table>
      </div>
      <div class="flex gap-2 mt-3">
        <button id="checkBtn3" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-1 rounded">Comprobar</button>
        <button id="revealBtn3" class="bg-gray-200 hover:bg-gray-300 px-4 py-1 rounded">Revelar</button>
        <button id="resetBtn3" class="bg-red-100 hover:bg-red-200 text-red-800 px-4 py-1 rounded">Reiniciar</button>
        <div id="score3" class="ml-auto font-semibold text-indigo-700"></div>
      </div>
    </section>

  </main>

  <script>
    // === Utilidades ===
    const eqAccent=(a,b)=>a.trim().toLocaleLowerCase('es')===b.trim().toLocaleLowerCase('es');

    // === Pr√°ctica 1 ===
    const answers1={ p1:"lleguen", p2:"sepas", p3:"hagamos", p4:"coma", p5:"vengan", p6:"est√©", p7:"salgas", p8:"estudie", p9:"guardemos", p10:"puedan" };
    const checkAll = ()=>{
      let correct=0,total=0;
      document.querySelectorAll('#practica1 input').forEach(inp=>{
        total++;
        const val=inp.value.trim();
        if(answers1[inp.dataset.id] && eqAccent(val,answers1[inp.dataset.id])){ inp.classList.add('is-correct'); inp.classList.remove('is-wrong'); correct++; }
        else { inp.classList.add('is-wrong'); inp.classList.remove('is-correct'); }
      });
      document.getElementById('score1').textContent=`${correct}/${total}`;
    };
    const revealAll = ()=>{
      document.querySelectorAll('#practica1 input').forEach(inp=>{ inp.value=answers1[inp.dataset.id]||""; inp.classList.remove('is-wrong'); inp.classList.add('is-correct'); });
      document.getElementById('score1').textContent = `‚úî`;
    };
    const resetAll = ()=>{
      document.querySelectorAll('#practica1 input').forEach(inp=>{ inp.value=""; inp.classList.remove('is-wrong','is-correct'); });
      document.getElementById('score1').textContent="";
    };
    document.getElementById('checkBtn1').onclick=checkAll;
    document.getElementById('revealBtn1').onclick=revealAll;
    document.getElementById('resetBtn1').onclick=resetAll;

    // === Pr√°ctica 2: banco de respuestas para la tabla ===
    const paradigms={
      hablar:{yo:'hable',tu:'hables',el:'hable',nosotros:'hablemos',vosotros:'habl√©is',ellos:'hablen'},
      comer:{yo:'coma',tu:'comas',el:'coma',nosotros:'comamos',vosotros:'com√°is',ellos:'coman'},
      vivir:{yo:'viva',tu:'vivas',el:'viva',nosotros:'vivamos',vosotros:'viv√°is',ellos:'vivan'},
      pensar:{yo:'piense',tu:'pienses',el:'piense',nosotros:'pensemos',vosotros:'pens√©is',ellos:'piensen'},
      dormir:{yo:'duerma',tu:'duermas',el:'duerma',nosotros:'durmamos',vosotros:'durm√°is',ellos:'duerman'},
      tener:{yo:'tenga',tu:'tengas',el:'tenga',nosotros:'tengamos',vosotros:'teng√°is',ellos:'tengan'},
      conocer:{yo:'conozca',tu:'conozcas',el:'conozca',nosotros:'conozcamos',vosotros:'conozc√°is',ellos:'conozcan'},
      construir:{yo:'construya',tu:'construyas',el:'construya',nosotros:'construyamos',vosotros:'construy√°is',ellos:'construyan'},
      seguir:{yo:'siga',tu:'sigas',el:'siga',nosotros:'sigamos',vosotros:'sig√°is',ellos:'sigan'},
      divertirse:{yo:'me divierta',tu:'te diviertas',el:'se divierta',nosotros:'nos divirtamos',vosotros:'os divirt√°is',ellos:'se diviertan'},
      torcer:{yo:'tuerza',tu:'tuerzas',el:'tuerza',nosotros:'torzamos',vosotros:'torz√°is',ellos:'tuerzan'},
      cocer:{yo:'cueza',tu:'cuezas',el:'cueza',nosotros:'cozamos',vosotros:'coz√°is',ellos:'cuezan'},
      vencer:{yo:'venza',tu:'venzas',el:'venza',nosotros:'venzamos',vosotros:'venz√°is',ellos:'venzan'}
    };

    const chart=document.getElementById('chart');
    const loadChart=()=>{ chart.classList.remove('hidden'); document.querySelectorAll('#chart input').forEach(i=>{ i.value=''; i.classList.remove('is-correct','is-wrong'); }); document.getElementById('score2').textContent=''; };
    const checkChart=()=>{
      const v=document.getElementById('verbSelect').value; const key=v.toLowerCase(); const model=paradigms[key]; if(!model) return;
      let correct=0,total=0;
      document.querySelectorAll('#chart input').forEach(inp=>{
        total++; const person=inp.dataset.person; const ans=model[person]; const val=inp.value.trim();
        if(eqAccent(val,ans)){ inp.classList.add('is-correct'); inp.classList.remove('is-wrong'); correct++; }
        else { inp.classList.add('is-wrong'); inp.classList.remove('is-correct'); }
      });
      document.getElementById('score2').textContent=`${correct}/${total}`;
    };
    const resetChart=()=>{ document.querySelectorAll('#chart input').forEach(i=>{ i.value=''; i.classList.remove('is-correct','is-wrong'); }); document.getElementById('score2').textContent=''; };

    document.getElementById('loadChart').onclick=loadChart;
    document.getElementById('checkChart').onclick=checkChart;
    document.getElementById('resetChart').onclick=resetChart;

    // === Pr√°ctica 3: yo-indicativo vs yo-subjuntivo ===
    const yoPairs = {
      caer:{ind:'caigo',subj:'caiga'},
      hacer:{ind:'hago',subj:'haga'},
      poner:{ind:'pongo',subj:'ponga'},
      salir:{ind:'salgo',subj:'salga'},
      ver:{ind:'veo',subj:'vea'},
      traer:{ind:'traigo',subj:'traiga'},
      valer:{ind:'valgo',subj:'valga'},
      caber:{ind:'quepo',subj:'quepa'},
      dirigir:{ind:'dirijo',subj:'dirija'},
      proteger:{ind:'protejo',subj:'proteja'},
      jugar:{ind:'juego',subj:'juegue'},
      corregir:{ind:'corrijo',subj:'corrija'},
      seguir:{ind:'sigo',subj:'siga'},
      conducir:{ind:'conduzco',subj:'conduzca'},
      conocer:{ind:'conozco',subj:'conozca'},
      influir:{ind:'influyo',subj:'influya'},
      torcer:{ind:'tuerzo',subj:'tuerza'},
      decir:{ind:'digo',subj:'diga'},
      o√≠r:{ind:'oigo',subj:'oiga'},
      tener:{ind:'tengo',subj:'tenga'},
      venir:{ind:'vengo',subj:'venga'},
      oler:{ind:'huelo',subj:'huela'},
      dar:{ind:'doy',subj:'d√©'},
      ir:{ind:'voy',subj:'vaya'},
      ser:{ind:'soy',subj:'sea'},
      saber:{ind:'s√©',subj:'sepa'},
      estar:{ind:'estoy',subj:'est√©'}
    };

    const verbsYoList = ['caer','hacer','poner','salir','ver','traer','valer','caber','dirigir','proteger','jugar','corregir','seguir','conducir','conocer','influir','torcer','decir','o√≠r','tener','venir','oler','dar','ir','ser','saber','estar'];

    const yoTableBody = document.getElementById('yoTableBody');
    if(yoTableBody){
      yoTableBody.innerHTML = verbsYoList.map(v=>`
        <tr class="border-t">
          <td class="p-2">${v}</td>
          <td class="p-2"><input data-verb="${v}" data-col="ind" class="border rounded px-2 w-full" /></td>
          <td class="p-2"><input data-verb="${v}" data-col="subj" class="border rounded px-2 w-full" /></td>
        </tr>
      `).join('');
    }

    function checkYo(){
      let correct=0,total=0;
      document.querySelectorAll('#practica3 input').forEach(inp=>{
        total++;
        const verb = inp.dataset.verb; const col = inp.dataset.col; const ans = yoPairs[verb]?.[col] || '';
        const val = inp.value.trim();
        if(eqAccent(val, ans)) { inp.classList.add('is-correct'); inp.classList.remove('is-wrong'); correct++; }
        else { inp.classList.add('is-wrong'); inp.classList.remove('is-correct'); }
      });
      const s = document.getElementById('score3'); if(s) s.textContent = `${correct}/${total}`;
    }
    function revealYo(){
      document.querySelectorAll('#practica3 input').forEach(inp=>{
        const verb = inp.dataset.verb; const col = inp.dataset.col; const ans = yoPairs[verb]?.[col] || '';
        inp.value = ans; inp.classList.add('is-correct'); inp.classList.remove('is-wrong');
      });
      const s = document.getElementById('score3'); if(s) s.textContent = '‚úî';
    }
    function resetYo(){
      document.querySelectorAll('#practica3 input').forEach(inp=>{ inp.value=''; inp.classList.remove('is-wrong','is-correct'); });
      const s = document.getElementById('score3'); if(s) s.textContent = '';
    }
    const c3=document.getElementById('checkBtn3'); if(c3) c3.onclick = checkYo;
    const r3=document.getElementById('revealBtn3'); if(r3) r3.onclick = revealYo;
    const x3=document.getElementById('resetBtn3'); if(x3) x3.onclick = resetYo;
  </script>
</body>
