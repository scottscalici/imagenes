            <tr class="border-t"><td class="p-2">vivir (-IR)</td><td class="p-2">viva</td><td class="p-2">vivas</td><td class="p-2">viva</td><td class="p-2">vivamos</td><td class="p-2">viváis</td><td class="p-2">vivan</td></tr>
            <tr class="border-t"><td class="p-2">pensar (e→ie)</td><td class="p-2">piense</td><td class="p-2">pienses</td><td class="p-2">piense</td><td class="p-2">pensemos</td><td class="p-2">penséis</td><td class="p-2">piensen</td></tr>
            <tr class="border-t"><td class="p-2">dormir (o→ue / o→u)</td><td class="p-2">duerma</td><td class="p-2">duermas</td><td class="p-2">duerma</td><td class="p-2">durmamos</td><td class="p-2">durmáis</td><td class="p-2">duerman</td></tr>
            <tr class="border-t"><td class="p-2">tener (yo: tengo)</td><td class="p-2">tenga</td><td class="p-2">tengas</td><td class="p-2">tenga</td><td class="p-2">tengamos</td><td class="p-2">tengáis</td><td class="p-2">tengan</td></tr>
