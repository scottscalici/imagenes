  <script>
    function eqAccent(a,b){ return a.trim().toLocaleLowerCase('es')===b.trim().toLocaleLowerCase('es'); }

    const answers = {
      p1:"estÃ©", p2:"terminen", p3:"te sientas", p4:"digan", p5:"bebas", p6:"lleguemos",
      p7:"viva", p8:"haga", p9:"salga", p10:"vengas", p11:"podamos", p12:"asistan"
    };

    function checkAll(){
      let correct=0,total=0;
      document.querySelectorAll('#practica input').forEach(inp=>{
        total++;
        const val=inp.value.trim();
        if(answers[inp.dataset.id] && eqAccent(val, answers[inp.dataset.id])){
          inp.classList.add('is-correct'); inp.classList.remove('is-wrong'); correct++;
        } else {
          inp.classList.add('is-wrong'); inp.classList.remove('is-correct');
        }
      });
      document.getElementById('score').textContent = `${correct}/${total}`;
    }

    function revealAll(){
      document.querySelectorAll('#practica input').forEach(inp=>{
        inp.value = answers[inp.dataset.id] || "";
        inp.classList.remove('is-wrong'); inp.classList.add('is-correct');
      });
    }

    function resetAll(){
      document.querySelectorAll('#practica input').forEach(inp=>{
        inp.value=""; inp.classList.remove('is-wrong','is-correct');
      });
      document.getElementById('score').textContent="";
    }

    document.getElementById('checkBtn').onclick = checkAll;
    document.getElementById('revealBtn').onclick = revealAll;
    document.getElementById('resetBtn').onclick = resetAll;
  </script>
