  <!-- === Scripts (grading only) === -->
  <script>
    // Short practice
    (function(){
      const answers={acc1:["se te cayeron"],acc2:["se les perdi√≥"],acc3:["se le qued√≥"]};
      document.getElementById("btn-acc1").addEventListener("click",()=>{
        let correct=0;
        Object.keys(answers).forEach(id=>{
          const input=document.getElementById(id);
          const user=input.value.trim().toLowerCase();
          if(answers[id].includes(user)){
            input.classList.add("border-green-500","bg-green-50"); correct++;
          } else {
            input.classList.add("border-red-400","bg-red-50");
          }
        });
        document.getElementById("score-acc1").textContent=`‚úÖ ${correct} de ${Object.keys(answers).length} correctas`;
      });
    })();

    // Extended (static 30)
    (function(){
      const expected=[
        "se te cayeron","se les perdi√≥","se le qued√≥","se nos olvid√≥","se le cay√≥",
        "se me perdieron","se les acab√≥","se le rompi√≥","se les olvid√≥","se te quem√≥",
        "se le perdi√≥","se nos olvid√≥","se les rompieron","se te qued√≥","se me quem√≥",
        "se le cayeron","se nos perdieron","se les acab√≥","se le rompi√≥","se me cay√≥",
        "se le olvid√≥","se les qued√≥","se nos rompi√≥","se les cay√≥","se me perdi√≥",
        "se le acab√≥","se te olvid√≥","se nos quemaron","se les rompi√≥","se le olvid√≥"
      ];
      document.getElementById("btn-acc2").addEventListener("click",()=>{
        let correct=0;
        expected.forEach((ans,i)=>{
          const input=document.getElementById(`acc${i+4}`);
          const user=input.value.trim().toLowerCase();
          if(user===ans){
            input.classList.add("border-green-500","bg-green-50"); correct++;
          } else {
            input.classList.add("border-red-400","bg-red-50");
          }
        });
        document.getElementById("score-acc2").textContent=`‚úÖ ${correct} de ${expected.length} correctas`;
      });
    })();
  </script>
