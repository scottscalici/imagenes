<!-- === Scripts === -->
<script>
// === Se Impersonal (Simple) ===
(function(){
  const answers = { imp1:["se come"], imp2:["se venden"], imp3:["se sirven"] };
  document.getElementById("btn-imp").addEventListener("click",()=>{
    let correct=0;
    Object.keys(answers).forEach(id=>{
      const input=document.getElementById(id);
      const user=input.value.trim().toLowerCase();
      if(answers[id].includes(user)){input.classList.add("border-green-500","bg-green-50");correct++;}
      else{input.classList.add("border-red-400","bg-red-50");}
    });
    document.getElementById("score-imp").textContent=`‚úÖ ${correct} de ${Object.keys(answers).length} correctas`;
  });
})();

// === Se Accidental (Short) ===
(function(){
  const answers={acc4:["se te cayeron"],acc5:["se les perdi√≥"],acc6:["se le qued√≥"]};
  document.getElementById("btn-acc").addEventListener("click",()=>{
    let correct=0;
    Object.keys(answers).forEach(id=>{
      const input=document.getElementById(id);
      const user=input.value.trim().toLowerCase();
      if(answers[id].includes(user)){input.classList.add("border-green-500","bg-green-50");correct++;}
      else{input.classList.add("border-red-400","bg-red-50");}
    });
    document.getElementById("score-acc").textContent=`‚úÖ ${correct} de ${Object.keys(answers).length} correctas`;
  });
})();

