        let doors = round1Doors;

        function loadDoor() {
            const door = doors[currentDoorIndex];
            document.getElementById('doorNumber').textContent = currentDoorIndex + 1;
            document.getElementById('currentDoor').textContent = currentDoorIndex + 1;
            document.getElementById('sentence').innerHTML = door.sentence;
            
            const optionsContainer = document.querySelector('.options');
            optionsContainer.innerHTML = '';
            
            door.options.forEach(option => {
                const button = document.createElement('button');
                button.className = 'option-btn';
                button.textContent = option.text;
                button.onclick = () => selectAnswer(option.value, option.correct, option.text);
                optionsContainer.appendChild(button);
            });
            
            document.getElementById('feedback').innerHTML = '';
            document.getElementById('feedback').className = 'feedback';
            answered = false;
            
            // Update progress bar
            const totalDoorsCompleted = (currentRound - 1) * 10 + currentDoorIndex + 1;
            const progress = (totalDoorsCompleted / 100) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('progressBar').innerHTML = `Puerta <span id="currentDoor">${totalDoorsCompleted}</span> de 100`;
        }

        function selectAnswer(selectedValue, isCorrect, selectedText) {
            if (answered) return;
            answered = true;
            
            const buttons = document.querySelectorAll('.option-btn');
            const feedback = document.getElementById('feedback');
            
            buttons.forEach(btn => {
                btn.style.pointerEvents = 'none';
                if (btn.textContent === selectedText) {
                    btn.className = isCorrect ? 'option-btn correct' : 'option-btn incorrect';
                }
            });
            
            if (isCorrect) {
                score++;
                feedback.className = 'feedback correct';
                feedback.innerHTML = `
                    <div>
                        <div style="font-size: 1.2rem; margin-bottom: 10px;">üéâ ¬°Excelente!</div>
                        <div>${doors[currentDoorIndex].explanation}</div>
                        <button class="next-btn" onclick="nextDoor()">Siguiente Puerta ‚Üí</button>
                    </div>
                `;
            } else {
                feedback.className = 'feedback incorrect';
                const correctOption = doors[currentDoorIndex].options.find(opt => opt.correct);
                feedback.innerHTML = `
                    <div>
                        <div style="font-size: 1.2rem; margin-bottom: 10px;">‚ùå Incorrecto</div>
                        <div>La respuesta correcta era: <strong>${correctOption.text}</strong></div>
                        <div style="margin-top: 10px;">${doors[currentDoorIndex].explanation}</div>
                        <button class="next-btn" onclick="nextDoor()">Siguiente Puerta ‚Üí</button>
                    </div>
                `;
            }
        }

        function nextDoor() {
            currentDoorIndex++;
            if (currentDoorIndex >= doors.length) {
                if (currentRound < totalRounds) {
                    showRoundCompletion();
                } else {
                    showFinalCompletion();
                }
            } else {
                loadDoor();
            }
        }

        function showRoundCompletion() {
            const feedback = document.getElementById('feedback');
            feedback.className = 'feedback correct';
            
            let roundScore = 0;
            if (currentRound === 1) roundScore = score;
            else if (currentRound === 2) roundScore = score - 10;
            else if (currentRound === 3) roundScore = score - 20;
            else if (currentRound === 4) roundScore = score - 30;
            else if (currentRound === 5) roundScore = score - 40;
            else if (currentRound === 6) roundScore = score - 50;
            else if (currentRound === 7) roundScore = score - 60;
            else if (currentRound === 8) roundScore = score - 70;
            else if (currentRound === 9) roundScore = score - 80;
            else if (currentRound === 10) roundScore = score - 90;
            
            let nextRoundText = '';
            let buttonText = '';
            
            if (currentRound === 1) {
                nextRoundText = '¬øListo para la Ronda 2? Se enfoca en el imperfecto para informaci√≥n de fondo.';
                buttonText = 'Comenzar Ronda 2 ‚Üí';
            } else if (currentRound === 2) {
                nextRoundText = '¬øListo para la Ronda 3? Compara informaci√≥n de fondo vs acciones principales.';
                buttonText = 'Comenzar Ronda 3 ‚Üí';
            } else if (currentRound === 3) {
                nextRoundText = '¬øListo para la Ronda 4? Distingue entre acciones en progreso y completadas.';
                buttonText = 'Comenzar Ronda 4 ‚Üí';
            } else if (currentRound === 4) {
                nextRoundText = '¬øListo para la Ronda 5? Contrasta estados pasados vs inicio y fin de acciones.';
                buttonText = 'Comenzar Ronda 5 ‚Üí';
            } else if (currentRound === 5) {
                nextRoundText = '¬øListo para la Ronda 6? Practica procesos mentales y estados psicol√≥gicos.';
                buttonText = 'Comenzar Ronda 6 ‚Üí';
            } else if (currentRound === 6) {
                nextRoundText = '¬øListo para la Ronda 7? Distingue entre secuencias de eventos y acciones habituales.';
                buttonText = 'Comenzar Ronda 7 ‚Üí';
            } else if (currentRound === 7) {
                nextRoundText = '¬øListo para la Ronda 8? Practica verbos especiales como poder, querer, saber y conocer.';
                buttonText = 'Comenzar Ronda 8 ‚Üí';
            } else if (currentRound === 8) {
                nextRoundText = '¬øListo para la Ronda 9? Pr√°ctica mixta combinando todos los conceptos aprendidos.';
                buttonText = 'Comenzar Ronda 9 ‚Üí';
            } else if (currentRound === 9) {
                nextRoundText = '¬øListo para la Ronda 10? ¬°El desaf√≠o final para demostrar tu dominio completo!';
                buttonText = 'Comenzar Ronda 10 ‚Üí';
            }
            
            feedback.innerHTML = `
                <div>
                    <div style="font-size: 1.5rem; margin-bottom: 15px;">üéâ ¬°Ronda ${currentRound} Completada!</div>
                    <div style="margin-bottom: 15px;">Puntuaci√≥n de esta ronda: ${roundScore}/10</div>
                    <div style="margin-bottom: 20px;">${nextRoundText}</div>
                    <button class="next-btn" onclick="startNextRound()" style="font-size: 1.1rem; padding: 15px 25px;">${buttonText}</button>
                </div>
            `;
        }

        function startNextRound() {
            currentRound++;
            currentDoorIndex = 0;
            if (currentRound === 2) {
                doors = round2Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 2: Informaci√≥n de Fondo (Imperfecto)';
            } else if (currentRound === 3) {
                doors = round3Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 3: Fondo vs Acci√≥n Principal';
            } else if (currentRound === 4) {
                doors = round4Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 4: Acciones en Progreso vs Completadas';
            } else if (currentRound === 5) {
                doors = round5Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 5: Estados Pasados vs Inicio y Fin';
            } else if (currentRound === 6) {
                doors = round6Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 6: Procesos Mentales y Estados Psicol√≥gicos';
            } else if (currentRound === 7) {
                doors = round7Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 7: Secuencia de Eventos vs Acciones Habituales';
            } else if (currentRound === 8) {
                doors = round8Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 8: Verbos Especiales (poder, querer, saber, conocer)';
            } else if (currentRound === 9) {
                doors = round9Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 9: Pr√°ctica Mixta - Combinando Todos los Conceptos';
            } else if (currentRound === 10) {
                doors = round10Doors;
                document.getElementById('roundTitle').textContent = 'Ronda 10: Desaf√≠o Final - Dominio Completo';
            }
            loadDoor();
        }

        function showFinalCompletion() {
            document.getElementById('gameArea').style.display = 'none';
            document.getElementById('completionArea').style.display = 'block';
            document.getElementById('finalScore').textContent = score;
        }

        function restartGame() {
            currentDoorIndex = 0;
            score = 0;
            currentRound = 1;
            doors = round1Doors;
            document.getElementById('roundTitle').textContent = 'Ronda 1: Conceptos B√°sicos';
            document.getElementById('gameArea').style.display = 'block';
            document.getElementById('completionArea').style.display = 'none';
            loadDoor();
        }

        // Initialize the game
        loadDoor();
    </script>
